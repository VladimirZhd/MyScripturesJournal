@page
@model MyScripturesJournal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Home";
}

<h1>My Notes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        <select asp-for="BookName" asp-items="Model.Books">
            <option value="">All</option>
        </select>
        Search in notes: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Notes)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Scripture[0].CreatedDate)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.Scripture[0].Book)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ScriptureId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ScriptureId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ScriptureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
